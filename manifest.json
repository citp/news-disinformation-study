{

    "manifest_version": 2,

    "name": "Princeton University News Study",

    "version": "0.1",

    "description": "A research project on how web users consume, are exposed to, and share news.",

    "background": {
        "page": "background-page.html",
        "persistent": true
    },

    "permissions": [
        "<all_urls>",
        "downloads",
        "idle",
        "notifications",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webRequest",
        "webRequestBlocking",
        "alarms",
        "history"
    ],

    "incognito": "spanning",

    "browser_specific_settings": {
        "gecko": {
            "id": "news.study@princeton.edu",
            "strict_min_version": "60.0"
        }
    }
    
}
