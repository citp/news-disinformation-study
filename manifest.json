{

    "manifest_version": 2,

    "name": "Princeton University News Study",

    "version": "0.1",

    "description": "A research project on how web users consume, are exposed to, and share news.",

    "icons": {
        "48": "icons/princeton_university_shield_book_gray.svg",
        "96": "icons/princeton_university_shield_book_gray.svg"
    },

    "options_ui": {
        "page": "settings/Options.html"
    },

    "background": {
        "page": "study/study.html",
        "persistent": true
    },

    "permissions": [
        "<all_urls>",
        "downloads",
        "idle",
        "notifications",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webRequest",
        "webRequestBlocking",
        "alarms",
        "history"
    ],

    "incognito": "spanning",

    "browser_specific_settings": {
        "gecko": {
            "id": "news.study@princeton.edu",
            "strict_min_version": "60.0"
        }
    },

    "experiment_apis": {
        "privileged": {
            "schema": "./privileged/schema.json",
            "parent": {
                "scopes": [ "addon_parent" ],
                "script": "./privileged/api.js",
                "paths": [[ "privileged" ]]
            }
        }
    }

}
