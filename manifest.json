{

    "manifest_version": 2,

    "name": "Princeton University News Study",

    "version": "1.3",

    "description": "An Ion study on how web users consume, are exposed to, and share news.",

    "icons": {
        "48": "icons/princeton_university_shield_book_gray.svg",
        "96": "icons/princeton_university_shield_book_gray.svg"
    },

    "background": {
        "scripts": ["dist/background.js"],
        "persistent": true
    },

    "permissions": [
        "<all_urls>",
        "alarms",
        "idle",
        "notifications",
        "storage",
        "unlimitedStorage",
        "webNavigation",
        "webRequest"
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "news.study@princeton.edu",
            "strict_min_version": "78.0"
        }
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/princeton_university_shield_book_gray.svg"
        }
    }

}
