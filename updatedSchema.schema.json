{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "mozPipelineMetadata": {
    "bq_metadata_format": "pioneer",
    "expiration_policy": {
      "delete_after_days": 180
    }
  },
  "properties": {
    "newsAndDisinfo.surveyId": {
        "type": "string",
        "description": "ID sent to Qualtrics, for associating survey responses with telemetry data"
    },
    "newsAndDisinfo.version": { "type": "string" },
    "newsAndDisinfo.pageNavigation": {
      "type": "object",
      "properties": {
        "untrackedVisitsCount": { "type": "integer" },
        "trackedVisitsByCategory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "visitDomain": { "type": "string" },
              "sourceDomainFromReferrer": { "type": "string" },
              "sourceDomainFromTransitions": { "type": "string" },
              "dayOfWeek": { "type": "integer" },
              "timeOfDay": { "type": "integer" },
              "classifierResults": {
              "type": "object",
              "additionalProperties": {
                "type": "integer"
                },
                "description": "additional properties are the name of the classifier, with the classification result as the value"
                },
              "categoryVisitsCount": { "type": "integer" },
              "categoryAttention": { "type": "integer" },
              "categoryScroll": { "type": "integer" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "newsAndDisinfo.socialMediaLinkSharing": {
      "type": "object",
      "properties": {
        "linkSharesByPlatform": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "platform": {
                "type": "string",
                "enum": ["facebook", "twitter", "reddit"]
              },
              "untrackedSharesCount": { "type": "integer" },
              "trackedSharesByCategory": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "sharedDomain": { "type": "string" },
                    "visitSourceFromReferrer": { "type": "string" },
                    "visitSourceFromTransitions": { "type": "string" },
                    "facebookReshareSource": { "type": "string" },
                    "dayOfWeek": { "type": "integer" },
                    "timeOfDay": { "type": "integer" },
                    "classifierResults": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "integer"
                        },
                        "description": "additional properties are the name of the classifier, with the classification result as the value"
                    },
                    "shareAudience": {
                      "type": "string",
                      "enum": ["public", "restricted", "unknown"]
                    },
                    "categorySharesCount": { "type": "integer" }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "newsAndDisinfo.linkExposure": {
      "type": "object",
      "properties": {
        "untrackedExposuresCount": { "type": "integer" },
        "trackedExposuresByCategory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "exposureSourceDomain": { "type": "string" },
              "exposureDestinationDomain": { "type": "string" },
              "dayOfWeek": { "type": "integer" },
              "timeOfDay": { "type": "integer" },
              "categoryExposuresCount": { "type": "integer" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}
